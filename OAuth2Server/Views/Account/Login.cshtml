@model LoginViewModel

<div class="login-page">
    <div class="lead">
        <p>Elegí cómo iniciar sesión</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h2>Active Directory</h2>
                    </div>

                    <div class="card-body">
                        <form asp-route="Login">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="Username">Dominio</label>
                                
                                <select class="form-control" asp-for="Domain" autofocus>
                                    <option value="">Seleccioná un dominio</option>
                                    @foreach (var item in Model.Domains)
                                    {
                                        <option value="@item">@item</option>
                                    }
                                 </select>
                            </div>

                            <div class="form-group">
                                <label asp-for="Username">Nombre de usuario</label>
                                <input class="form-control" placeholder="Nombre de usuario" asp-for="Username" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Contraseña</label>
                                <input type="password" class="form-control" placeholder="Contraseña" asp-for="Password" autocomplete="off">
                            </div>
                            @if (Model.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="RememberLogin">
                                        <label class="form-check-label" asp-for="RememberLogin">
                                            Recordarme
                                        </label>
                                    </div>
                                </div>
                            }
                            <button class="btn btn-primary" name="button" value="login">Iniciar sesión</button>
                            <button class="btn btn-secondary" name="button" value="cancel">Cancelar</button>
                        </form>
                    </div>
                </div>
            </div>
        }

        @if (Model.VisibleExternalProviders.Any())
        {
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h2>Cuenta externa</h2>
                    </div>
                    <div class="card-body">
                        <ul class="list-inline">
                            @foreach (var provider in Model.VisibleExternalProviders)
                            {
                                <li class="list-inline-item">
                                    <a class="btn btn-secondary"
                                       asp-controller="External"
                                       asp-action="Challenge"
                                       asp-route-scheme="@provider.AuthenticationScheme"
                                       asp-route-returnUrl="@Model.ReturnUrl">
                                        @provider.DisplayName
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }

        @if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
        {
            <div class="alert alert-warning">
                <strong>Solicitud de inicio de sesión inválida</strong>
                No hay esquemas de inicio de sesión configurados para esta solicitud.
            </div>
        }
    </div>
</div>